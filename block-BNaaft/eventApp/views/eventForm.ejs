<%- include('partials/header') -%>
<main>
  <h1 class="main-heading">Create Event</h1>
  <form action="/events" method="POST" class="form">
    <div>
      <label for="title">Title: </label>
      <input type="text" name="title" id="title" placeholder="Title of event" />
    </div>
    <div>
      <label for="summary">Summary: </label>
      <textarea
        name="summary"
        id="summary"
        placeholder="Enter event summary"
      ></textarea>
    </div>
    <div>
      <label for="host">Host: </label>
      <input type="text" name="host" id="host" placeholder="Enter event host" />
    </div>
    <div>
      <label for="image">Image: </label>
      <input
        type="text"
        name="image"
        id="image"
        placeholder="Enter image URL"
      />
    </div>
    <div>
      <label for="start_date">Start Date: </label>
      <input
        type="datetime-local"
        name="start_date"
        id="start_date"
        placeholder="Enter event start date"
      />
    </div>
    <div>
      <label for="end_date">End Date: </label>
      <input
        type="datetime-local"
        name="end_date"
        id="end_date"
        placeholder="Enter event end date"
      />
    </div>
    <div>
      <p>Categories:</p>
      <% categories.forEach(category => { %>
      <div class="checkbox-item">
        <input
          type="checkbox"
          name="event_category"
          value="<%= category.id %>"
          id="<%= category.id %>"
        />
        <label for="<%= category.id %>"><%= category.name %> </label>
      </div>
      <% }) %>
    </div>
    <div>
      <label for="location">Location: </label>
      <input
        type="text"
        name="location"
        id="location"
        placeholder="Enter event location"
      />
    </div>

    <input type="submit" value="Add Event" class="submit-btn" />
  </form>
</main>
<%- include('partials/footer') -%>